<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/gradient_background_grey"
              android:orientation="vertical"
              tools:context=".pendana.PendanaFundDetailActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

        <ImageButton
                android:onClick="ButtonBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon"
                android:layout_margin="4dp"
                android:background="#00FFFFFF"
                android:scaleType="center"
                android:scaleX="2.2"
                android:scaleY="2.2"
                android:contentDescription="BackButton"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Pinjaman"
                android:fontFamily="@font/fira_sans_bold"
                android:textSize="24sp"
                android:textColor="@color/text_tertier"
                android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Berikut merukapan detail informasi pinjaman yand anda danai."
                        android:fontFamily="@font/fira_sans"
                        android:textSize="12sp"
                        android:textColor="@color/text_tertier"
                        android:textAlignment="center" />

                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:outlineProvider="paddedBounds"
                        android:padding="8dp"
                        android:stretchColumns="1">

                    <TableRow>
                        <TextView
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:padding="3dp"
                                android:text="ID Pinjaman"
                                android:textColor="@color/unselected" />

                        <TextView
                                android:id="@+id/fund_id_pinjaman"
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:gravity="end"
                                android:padding="3dp"
                                android:text="loading..."
                                android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:padding="3dp"
                                android:text="Tanggal Pendanaan"
                                android:textColor="@color/unselected" />

                        <TextView
                                android:id="@+id/fund_tgl_pendanaan"
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:gravity="end"
                                android:padding="3dp"
                                android:text="loading..."
                                android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:padding="3dp"
                                android:text="Status Pinjaman"
                                android:textColor="@color/unselected" />

                        <TextView
                                android:id="@+id/fund_status"
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:gravity="end"
                                android:padding="3dp"
                                android:text="loading..."
                                android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:padding="3dp"
                                android:text="Tahap Pinjaman"
                                android:textColor="@color/unselected" />

                        <TextView
                                android:id="@+id/fund_tahap"
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:gravity="end"
                                android:padding="3dp"
                                android:text="loading..."
                                android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:padding="3dp"
                                android:text="Jatuh Tempo"
                                android:textColor="@color/unselected" />

                        <TextView
                                android:id="@+id/fund_tgl_tempo"
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:gravity="end"
                                android:padding="3dp"
                                android:text="loading..."
                                android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:padding="3dp"
                                android:text="Sisa Waktu Pinjaman"
                                android:textColor="@color/unselected" />

                        <TextView
                                android:id="@+id/fund_sisa_tenor"
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:gravity="end"
                                android:padding="3dp"
                                android:text="loading..."
                                android:textColor="@color/text_tertier" />
                    </TableRow>


                    <TableRow>
                        <TextView
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:padding="3dp"
                                android:text="Besar Pinjaman"
                                android:textColor="@color/unselected"
                                />

                        <TextView
                                android:id="@+id/fund_besar_pinjaman"
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:text="loading..."
                                android:gravity="end"
                                android:padding="3dp"
                                android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:padding="3dp"
                                android:text="Keuntungan Pendana"
                                android:textColor="@color/unselected" />

                        <TextView
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:gravity="end"
                                android:padding="3dp"
                                android:text="15%"
                                android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:padding="3dp"
                                android:text="Dana Kembali"
                                android:textColor="@color/unselected" />

                        <TextView
                                android:id="@+id/fund_dana_kembali"
                                android:fontFamily="@font/fira_sans_bold_italic"
                                android:gravity="end"
                                android:padding="3dp"
                                android:text="loading..."
                                android:textColor="@color/text_tertier" />
                    </TableRow>

                </TableLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/fira_sans_bold_italic"
                        android:textSize="24dp"
                        android:text="Dana Diterima"
                        android:textColor="@color/text_tertier" />

                <TextView
                        android:id="@+id/fund_dana_diterima"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:fontFamily="@font/fira_sans_bold_italic"
                        android:textSize="28dp"
                        android:text="loading..."
                        android:textColor="@color/text_tertier" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/fira_sans"
                        android:layout_marginHorizontal="8dp"
                        android:textSize="12sp"
                        android:text="1. Pengembalian pendanaan oleh peminjam dilakukan setiap bulan, dan ditransfer ke rekening pendana dalam waktu 2-3 hari kerja setelah dana cicilan ditransfer oleh peminjam."
                        android:textColor="#EF6C00"
                        android:textAlignment="textStart" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans"
                        android:layout_marginHorizontal="8dp"
                        android:textSize="12sp"
                        android:text="2. Dana diterima adalah akumulasi pengembalian dana oleh peminjam beserta denda keterlambatan pembayaran sebesar 0,8% per hari."
                        android:textColor="#EF6C00"
                        android:textAlignment="textStart" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>