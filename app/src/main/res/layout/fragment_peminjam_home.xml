<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:measureAllChildren="true"
    android:background="@color/transparent"
    tools:context=".peminjam_system.PeminjamHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/peminjam_judul_beranda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Pinjam Aja!"
            android:fontFamily="@font/fira_sans_bold"
            android:textSize="24sp"
            android:textColor="@color/text_tertier"
            android:textAlignment="center" />

        <!-- TODO : PILIHAN PINJAMAN -->

        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewPinjam1"
            android:layout_below="@+id/peminjam_judul_beranda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:theme="@style/Base.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/welcome_3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OPSI PINJAMAN #1"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/text_tertier"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp. 500.000,-"
                        android:fontFamily="@font/fira_sans_bold_italic"
                        android:textAlignment="center"
                        android:textSize="28sp"
                        android:textColor="@color/text_tertier"/>

                    <Button
                        android:id="@+id/button_opsi_500K"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_round_bg"
                        android:fontFamily="@font/fira_sans_bold"
                        android:text="PILIH"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewPinjam2"
            android:layout_below="@id/CardViewPinjam1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:theme="@style/Base.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/welcome_3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OPSI PINJAMAN #2"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/text_tertier"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp. 1.000.000,-"
                        android:fontFamily="@font/fira_sans_bold_italic"
                        android:textAlignment="center"
                        android:textSize="28sp"
                        android:textColor="@color/text_tertier"/>

                    <Button
                        android:id="@+id/button_opsi_1000K"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_round_bg"
                        android:fontFamily="@font/fira_sans_bold"
                        android:text="PILIH"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewPinjam3"
            android:layout_below="@id/CardViewPinjam2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:theme="@style/Base.CardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/welcome_3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OPSI PINJAMAN #3"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/text_tertier"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp. 1.500.000,-"
                        android:fontFamily="@font/fira_sans_bold_italic"
                        android:textAlignment="center"
                        android:textSize="28sp"
                        android:textColor="@color/text_tertier"/>

                    <Button
                        android:id="@+id/button_opsi_1500K"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_round_bg"
                        android:fontFamily="@font/fira_sans_bold"
                        android:text="PILIH"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- TODO : RINCIAN BIAYA LAYANAN-->

        <androidx.cardview.widget.CardView
            android:id="@+id/RincianBiaya"
            android:layout_below="@id/CardViewPinjam3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:theme="@style/Base.CardView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="RINCIAN BIAYA LAYANAN"
                    android:fontFamily="@font/fira_sans_bold_italic"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/text_tertier"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:outlineProvider="paddedBounds"
                    android:stretchColumns="1">

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dip"
                            android:text="Jangka Waktu Pinjaman"
                            android:textColor="@color/unselected"
                            />

                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="3 Bulan"
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dip"
                            android:text="Bunga Pinjaman"
                            android:textColor="@color/unselected" />

                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="20%"
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dip"
                            android:text="Bunga Keterlambatan"
                            android:textColor="@color/unselected" />

                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="0.8%/Hari"
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dip"
                            android:text="Akumulasi Denda Maksimal"
                            android:textColor="@color/unselected" />

                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="+100%"
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                </TableLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>